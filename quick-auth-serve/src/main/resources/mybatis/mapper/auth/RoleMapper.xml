<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.quick.auth.mapper.RoleMapper">

    <sql id="permission">
        `sys_permission`
    </sql>
    <sql id="role_permission">
        `sys_role_permission`
    </sql>
    <sql id="role">
        `sys_role`
    </sql>
    <sql id="user_role">
        `sys_user_role`
    </sql>
    <sql id="user">
        `sys_user`
    </sql>

    <sql id="Base_Column_List">
        id, role_id, name, description, status, create_time, update_time
    </sql>

    <select id="findRoles" resultType="com.quick.auth.entity.Role">
        SELECT
        <include refid="Base_Column_List"/>
        FROM <include refid="role"/>
        WHERE status = #{status}
        <if test="name != null and name != '' and name!='null' ">
            AND name LIKE concat('%', #{name}, '%')
        </if>
    </select>

    <select id="findRolesWhetherExistByRoleNameOrRoleId" resultType="java.lang.Integer">
        SELECT count(id) FROM <include refid="role"/> WHERE name = #{name} AND status = #{status}
        <if test="roleId != null">
            AND role_id != #{roleId}
        </if>
    </select>

    <insert id="insertRole">
        INSERT INTO <include refid="role"/>
        (
        <if test="id != null">
            id,
        </if>
        <if test="roleId != null and roleId != ''">
            role_id,
        </if>
        <if test="name != null and name != ''">
            name,
        </if>
        <if test="description != null and description != ''">
            description,
        </if>
        <if test="status != null">
            status,
        </if>
        create_time,
        update_time
        )
        VALUES(
        <if test="id != null">
            #{id},
        </if>
        <if test="roleId != null and roleId != ''">
            #{roleId},
        </if>
        <if test="name != null and name != ''">
            #{name},
        </if>
        <if test="description != null and description != ''">
            #{description},
        </if>
        <if test="status != null">
            #{status},
        </if>
        now(),
        now()
        )
    </insert>

    <update id="updateStatusBatch" parameterType="map">
        UPDATE
        <include refid="role"/>
        SET
        status=#{status}, update_time=now()
        WHERE
        role_id IN
        <foreach collection="roleIds" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <update id="updateByRoleId">
        UPDATE
        <include refid="role"/>
        SET
        <if test="id != null">
            id = #{id},
        </if>
        <if test="roleId != null and roleId != ''">
            role_id = #{roleId},
        </if>
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        <if test="status != null">
            status = #{status},
        </if>
        update_time = now()
        WHERE
        role_id = #{roleId}
    </update>

</mapper>
